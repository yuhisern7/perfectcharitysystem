# PCS Environment Configuration
# Copy this file to .env and update the values for production

# Secret key for session encryption (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
PCS_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Admin password (default: admin)
PCS_ADMIN_PASSWORD=admin

# Server configuration
PCS_HOST=0.0.0.0
PCS_PORT=8000
PCS_WORKERS=4

# Debug mode (set to 'false' in production)
PCS_DEBUG=false
